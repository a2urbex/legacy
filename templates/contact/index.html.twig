{% block content %}
	<div class="contact-container">
		<div class="contact-general">
			<div class="contact-banner"></div>
			<a target="blank" href="https://www.instagram.com/a2urbex/">
				<i class="fa-brands fa-instagram"></i>
				a2urbex</a>
			<p>
				<i class="fa-solid fa-envelope"></i>
				contact@a2urbex.eu</p>
			<p>
				<i class="fa-solid fa-envelope"></i>
				support@a2urbex.eu</p>
		</div>
		<div class="contact-self">
			<div class="contact-clement">
				<img src="./contact/clement.png">
				<a target="blank" href="https://github.com/clementp0">Clementp0
					<i class="fa-brands fa-github"></i>
				</a>
				<a target="blank" href="https://instagram.com/clement.po">clement.po
					<i class="fa-brands fa-instagram"></i>
				</a>
			</div>
			<span></span>
			<div class="contact-hugo">
				<img src="./contact/hugo.png">
				<a target="blank" href="https://github.com/LahaxeHugo">
					<i class="fa-brands fa-github"></i>
					LahaxeHugo</a>
				<a target="blank" href="https://www.instagram.com/hugolahaxe/">
					<i class="fa-brands fa-instagram"></i>
					hugolahaxe</a>
			</div>
		</div>

	</div>
	<style>
		.contact-general > p {
			color: #b5b5b5;
			font-size: 13px;
			margin: 0;
		}
        .contact-general > a {
			color: #b5b5b5;
			font-size: 13px;
			margin: 0;
		}
        .contact-general {
			margin-bottom: 20px;
		}
		.contact-banner {
			width: 100%;
			height: 150px;
			background-size: cover;
			background-position-y: center;
			background-image: url('./contact/main.png');
			margin-bottom: 10px;
			border-radius: 3px;
		}
		.contact-self > div > img {
			margin-bottom: 10px;
			width: 150px;
			border-radius: 3px;
		}
		.contact-self > span {
			width: 1px;
			background-color: #404040;
			margin: 0 10px;
		}
		.contact-hugo {
			text-align: left;
			display: flex;
			flex-direction: column;
		}
        .contact-self > div > a {
            color: #b5b5b5;
            font-size: 14px;
        }
		.contact-clement {
			text-align: right;
			display: flex;
			flex-direction: column;
		}
		.contact-container {
			text-align: center;
			font-weight: 500;
			border: 1px solid #404040;
			background-color: #222222;
			padding: 11px;
			border-radius: 5px;
			margin: 0;
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			box-shadow: 0 0 9px 2px #0000006e;
		}
		.contact-self {
			display: flex;
		}
	</style>
{% endblock %}
