{% extends 'base.html.twig' %}
{% block content %}
	<div class="fav-list">
		{% for item in favorites %}
			{% set key = "#{item.fav.id}#{hashkey}" %}
			<div class="fav-item">
				<a href="{{ path('app_favorite_locations', {'key': key | hashids_encode}) }}">
					<p class="location_favorite_name">{{ item.fav.name }}</p>
					<p class="location_favorite_loc">{{ item.count }} locations.</p>
					
				</a>


			<div class="dropdown-favorite">
				<button class="dropbtn">
					<i class="fa-solid fa-ellipsis-vertical"></i>
				</button>
				<div class="dropdown-favorite-content">
								<div class="fav-item-action">
					<div class="share-user-wrapper">
						<a href="#" class="fav-item-share-user{{ item.fav.master ? ' disabled' : '' }}">
							<i class="fa-solid fa-user-plus"> </i>  Add User
						</a>
						<div class="share-select-wrapper">
							<select class="share-select">
								<option value="">Choose user</option>
								{% for user in users %}
									<option value="{{ path('app_favorite_share_user', {'id': item.fav.id, 'uid': user.id}) }}">{{user.lastname}}
										{{user.firstname}}</option>
								{% endfor %}
							</select>
							<a href="" class="share-select-link">
								<i class="fa-solid fa-check"></i>
							</a>
						</div>
					</div>
				</a>

			</div>
					<a class="fav-item-copy-link" data-toggle="tooltip" href="{{ url('app_favorite_locations', {'key': key | hashids_encode}) }}">
						<i class="fa-solid fa-link"></i>
						Share link
					</a>
					{% if item.fav.share %}
					<a href="{{ path('app_favorite_share_link', {'id': item.fav.id}) }}" class="fav-item-share-link{{ item.fav.master ? ' disabled' : '' }}">
						<i class="fa-solid fa-lock-open"></i> Public
					</a>
					{% else %}
					<a href="{{ path('app_favorite_share_link', {'id': item.fav.id}) }}" class="fav-item-share-link{{ item.fav.master ? ' disabled' : '' }}">
						<i class="fa-solid fa-lock"></i> Private
					</a>
					{% endif %}
					{% if  item.fav.disabled %}
					<a href="{{ path('app_favorite_disable', {'id': item.fav.id}) }}" class="fav-item-disable">
						<i class="fa-solid fa-eye-slash"></i> Hidden
					</a>
					{% else %}
					<a href="{{ path('app_favorite_disable', {'id': item.fav.id}) }}" class="fav-item-disable">
						<i class="fa-solid fa-eye"></i> Visible
					</a>
					{% endif %}
					<a href="{{ path('app_favorite_delete', {'id': item.fav.id}) }}" class="fav-item-delete{{ item.fav.master ? ' disabled' : '' }}">
						<i class="fa-solid fa-trash"></i>
						Delete
					</a>
				</div>
			</div>


		</div>
	{% endfor %}
</div>
<script>
	$('.fav-item-copy-link').click(function (e) {
e.preventDefault();
var copyText = $(this).attr('href');
document.addEventListener('copy', function (e) {
e.clipboardData.setData('text/plain', copyText);
e.preventDefault();
}, true);
document.execCommand('copy');
});
</script>{% endblock %}
